<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.FirstFragment"
    android:background="@color/backgroundLayout">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/actionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="350dp"
        android:backgroundTint="@color/red"
        android:src="@drawable/baseline_add_24"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/name_billboard"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_marginLeft="125dp"
            android:fontFamily="sans-serif-black"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="360dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/cardLayout"
            >

            <ImageView
                android:id="@+id/star_wars"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:src="@drawable/star_wars" />

            <TextView
                android:id="@+id/movie_star_wars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_wars_episodio_3_la_venganza_de_los_sith"
                android:textSize="19dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/white"
                android:layout_marginLeft="150dp"
                />

            <TextView
                android:id="@+id/calification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9.8"
                android:textColor="@color/calification"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="50dp"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="360dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_marginBottom="225dp"
            android:backgroundTint="@color/cardLayout"
            >

            <ImageView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:src="@drawable/harry_potter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harry Potter y la Piedra Filosofal"
                android:textSize="19dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/white"
                android:layout_marginLeft="150dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9.5"
                android:textColor="@color/calification"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="50dp"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</FrameLayout>
